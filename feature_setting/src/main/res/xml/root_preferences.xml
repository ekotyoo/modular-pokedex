<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <ListPreference
        app:defaultValue="@string/pref_value_light"
        app:entries="@array/theme_entries"
        app:entryValues="@array/theme_values"
        app:icon="@drawable/ic_dark_mode"
        app:key="@string/pref_key_theme"
        app:title="Theme"
        app:useSimpleSummaryProvider="true" />

    <SwitchPreference
        app:defaultValue="true"
        app:icon="@drawable/ic_baseline_notifications"
        app:key="@string/pref_key_notification"
        app:summary="@string/pref_summary_notification"
        app:title="Notification" />
</PreferenceScreen>